{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "rootDir": "./scripts",
    "strict": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "paths": {
      "@/*": ["./scripts/*"]
    },
    "inlineSources": true,
    "sourceMap": true
  },
  "include": ["scripts/**/*"],
  "exclude": ["styles/**/*", "node_modules/**/*"]
}
